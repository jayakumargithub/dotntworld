@{
    ViewBag.Title = "Clients";
}

<h2>Clients</h2>
<ul class="nav nav-pills">
    <li>@Html.ActionLink("New Client", "Manage")</li>
</ul>
<table class="table table-striped hide table-condensed" data-bind="css: { hide: !clients().length }">
    <thead>
        <tr>
            <th></th>
            <th>Enabled</th>
            <th>Client ID</th>
            <th>Name</th>
            <th>Flow</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: clients">
        <tr>
            <td>
                @{ var url = @Url.Action("Manage"); }
                <a class="btn btn-primary" data-bind="attr: {href:'@url#' + $data.clientId()}">Manage</a>
                <div class="btn-group">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Delete
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#" data-bind="click: function (data, evt) { $parent.deleteClient(data) }"><span class="icon-ok"></span>
                                Confirm</a>
                        </li>
                        <li>                            
                            <a href="#"><span class="icon-remove"></span>
                                Cancel</a>
                        </li>
                    </ul>
                </div>
            </td>
            <td data-bind="text: enabled"></td>
            <td data-bind="text: clientId"></td>
            <td data-bind="text:name"></td>
            <td data-bind="text: flow"></td>
        </tr>
    </tbody>
</table>
<p data-bind="css: { hide: clients().length }" class="alert alert-warning hide">
    No Clients Found
</p>

@section scripts{
    <script src="~/Areas/Admin/Scripts/Clients.js"></script>
}
@{
    ViewBag.Title = "Server Administrators";
}

<h2>Server Administrators</h2>
<ul class="nav nav-pills">
    <li>
        <a href="@Url.Action("Index")">
            <i class="icon-arrow-left"></i> Back to Global</a>
    </li>
</ul>
<fieldset>
    <legend></legend>
    <div>
        <label for="name">Add Administrator Name ID</label>
        <input id="name" data-bind="value: nameToAdd, valueUpdate: 'keyup'" />
        <button class="btn btn-primary" data-bind="click:addAdmin, disable:anyErrors">Add</button>
    </div>
</fieldset>
<table class="table table-striped hide table-condensed" data-bind="css: { hide: !administrators().length }">
    <thead>
        <tr>
            <th></th>
            <th>Administrator Name ID</th>
        </tr>
    </thead>
    <tbody data-bind="foreach:administrators">
        <tr>
            <td>
                <div class="btn-group">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Delete
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#" data-bind="click: function (data, evt) { $parent.deleteAdmin(data) }"><span class="icon-ok"></span>
                                Confirm</a>
                        </li>
                        <li>                            
                            <a href="#"><span class="icon-remove"></span>
                                Cancel</a>
                        </li>
                    </ul>
                </div>
            </td>
            <td data-bind="text:nameID"></td>
        </tr>
    </tbody>
</table>
<p data-bind="css: { hide: administrators().length }" class="alert alert-warning hide">
    No Administrators Found
</p>

@section scripts
{
    <script src="~/Areas/Admin/Scripts/Global-Administrators.js"></script>
}

@{
    ViewBag.Title = "Scopes";
}

<h2>Scopes</h2>

<ul class="nav nav-pills">
    <li>
        @{ var url = @Url.Action("Manage"); }
        <a data-bind="attr: { href: '@url#' + $data.appID() }">
            <i class="icon-arrow-left"></i> Back to Application</a>
    </li>
    <li>
        @{ var url2 = @Url.Action("Scope"); }
        <a data-bind="attr: { href: '@url2#a' + $data.appID() }">New Scope</a>
    </li>
</ul>
<table class="table table-striped hide table-condensed" data-bind="css: { hide: !scopes().length }">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Emphasize</th>
            <th>Client Count</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: scopes">
        <tr>
            <td>
                <a class="btn btn-primary" data-bind="attr: { href: '@url2#' + $data.id() + 'a' + $parent.appID() }">Manage</a>
                <div class="btn-group">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Delete
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#" data-bind="click: function (data, evt) { $parent.deleteScope(data) }"><span class="icon-ok"></span>
                                Confirm</a>
                        </li>
                        <li>                            
                            <a href="#"><span class="icon-remove"></span>
                                Cancel</a>
                        </li>
                    </ul>
                </div>
            </td>
            <td data-bind="text:name"></td>
            <td><input type="checkbox" disabled data-bind="checked: emphasize" /></td>
            <td data-bind="text: clientCount"></td>
        </tr>
    </tbody>
</table>
<p data-bind="css: { hide: scopes().length }" class="alert alert-warning hide">
    No Scopes Found
</p>


@section scripts
{
    <script src="~/Areas/Admin/Scripts/Scopes.js"></script>
}

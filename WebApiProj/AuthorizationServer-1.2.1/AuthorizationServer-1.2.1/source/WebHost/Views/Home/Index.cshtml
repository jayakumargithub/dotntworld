@{
    ViewBag.Title = "Index";
}

<div class="hero-unit">
    <h1>AuthorizationServer</h1>
    <p>We secure your APIs</p>
    <p>
        @if(Thinktecture.AuthorizationServer.WebHost.Settings.EnableSelfService)
        {
            <a href="@Url.Action("Index", "Home", new { area = "UserApplications" })" 
                class="btn btn-primary btn-large">Application Permissions</a>
        }
        @if(Thinktecture.AuthorizationServer.WebHost.Settings.EnableAdmin)
        {
            <a href="@Url.Action("Index", "Home", new { area = "Admin" })" 
                class="btn btn-primary btn-large">Configure Server</a>
        }
    </p>
</div>
